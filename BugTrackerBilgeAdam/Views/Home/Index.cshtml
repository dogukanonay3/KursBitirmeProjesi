@model List<HataViewModel>
<!doctype html>
<html lang="tr">
<head>
</head>
<body>
    <div class="text-end">
        <b> <a href="/Home/Ekle" class="btn btn-outline-primary">Hata Ekle</a> </b>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <b>Hatalar</b>
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Sorun Başlık</th>
                    <th>Sorun Statüsü</th>
                </tr>
                @foreach (var Hata in Model)
                {
                    <tr>
                        <td>@Hata.KullaniciAdi</td>
                        <td>@Hata.HataBaslik</td>
                        <td>@Hata.HataÖncelik</td>
                        <td>
                            <a href="/Home/Detay/@Hata.HataId" class="btn btn-outline-success" >Detay</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
